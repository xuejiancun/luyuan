<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/home_page_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="100dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/home_page_button_popular"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:background="@drawable/home_page_button_popular"
            android:layout_gravity="left" />

        <Button
            android:id="@+id/home_page_button_product"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:background="@drawable/home_page_button_product"
            android:layout_gravity="left" />

        <Button
            android:id="@+id/home_page_button_tech"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:background="@drawable/home_page_button_tech"
            android:layout_gravity="left" />

        <Button
            android:id="@+id/home_page_button_luyuan"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:background="@drawable/home_page_button_luyuan"
            android:layout_gravity="left" />

    </LinearLayout>

</LinearLayout>