<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.luyuan.mobile">

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.luyuan.mobile.MainApplication"
        android:icon="@drawable/app_logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.luyuan.mobile.ui.WelcomeActivity"
            android:theme="@style/MyTheme.WelcomePage.Background"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.luyuan.mobile.ui.LoginActivity"
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name="com.luyuan.mobile.ui.MainActivity"
            android:parentActivityName="com.luyuan.mobile.ui.LoginActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".function.SalesPersonalReport"
            android:parentActivityName=".ui.MainActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".function.SalesBillboardReport"
            android:parentActivityName=".ui.MainActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".function.SalesStrategyReport"
            android:parentActivityName=".ui.MainActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".function.SalesTacticalReport"
            android:parentActivityName=".ui.MainActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name="com.luyuan.mobile.function.WarehouseVoucherManagerActivity"
            android:parentActivityName=".ui.MainActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".function.UploadMaterialActivity"
            android:parentActivityName=".ui.MainActivity"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>
