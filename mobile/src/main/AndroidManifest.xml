<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.luyuan.mobile">

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.luyuan.mobile.MainApplication"
        android:icon="@drawable/app_logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.luyuan.mobile.ui.LoginActivity"
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.luyuan.mobile.ui.WelcomeActivity"
            android:theme="@style/MyTheme.WelcomePage.Background"
            android:screenOrientation="portrait">

        </activity>
        <activity
            android:name="com.luyuan.mobile.ui.MainActivity"
            android:parentActivityName="com.luyuan.mobile.ui.LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="com.luyuan.mobile.util.FileContentProvider"
            android:authorities="com.example.fileprovider" />
    </application>

</manifest>
