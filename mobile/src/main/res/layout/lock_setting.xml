<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top|left"
    >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:background="#D4D4D4"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="left|center"
            android:layout_height="50dp"
            android:textSize="16dp"
            android:text="手势密码"
            android:textColor="#000"
            android:id="@+id/lock_setting_btn"
            />
        <ImageView
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:src="@drawable/checkbox_setting_off"
            android:scaleType="fitCenter"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:onClick="Btn1OnClick"
            android:id="@+id/setting_icon"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:background="#D4D4D4"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="left|center"
            android:layout_height="50dp"
            android:textSize="16dp"
            android:text="修改手势密码"
            android:textColor="#000"
            android:id="@+id/lock_setting_btn2"
            />
        <ImageView
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:src="@drawable/function_item_forward_green"
            android:scaleType="fitCenter"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:onClick="Btn2OnClick"
            android:id="@+id/setting_icon2"

            />
    </RelativeLayout>





</LinearLayout>
