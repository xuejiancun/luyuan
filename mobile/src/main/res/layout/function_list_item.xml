<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/networkimageview_function_icon"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:padding="5dp"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_tab_function" />

    <TableLayout
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_gravity="center"
        android:stretchColumns="1">

        <TableRow>

            <TextView
                android:id="@+id/textview_funciton_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="库存查询" />

        </TableRow>

        <TableRow android:paddingTop="8dp">

            <TextView
                android:id="@+id/textview_funciton_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="库存查询描述" />

        </TableRow>

    </TableLayout>

    <ImageView
        android:id="@+id/networkimageview_function_forward"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:padding="15dp"
        android:layout_gravity="right"
        android:src="@drawable/function_list_forward" />

</LinearLayout>