<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

    <TextView
        android:id="@+id/text_account_name"
        android:textSize="14dp"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="2"/>

    <TextView
        android:id="@+id/text_account_amount"
        android:textSize="14dp"
        android:gravity="right"
        android:textColor="#46C50C"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="2"/>

    <TextView
        android:id="@+id/text_account_credit"
        android:textSize="14dp"
        android:gravity="right"
        android:textColor="#0099CC"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="2"/>

    <TextView
        android:id="@+id/text_account_used"
        android:textSize="14dp"
        android:gravity="right"
        android:textColor="#663399"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="2"/>

    <TextView
        android:id="@+id/text_account_times"
        android:textSize="14dp"
        android:gravity="right"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>