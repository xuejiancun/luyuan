<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.luyuan.android.mberp">

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.luyuan.android.mberp.ui.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.luyuan.android.mberp.ui.WelcomeActivity"
            android:theme="@style/MyTheme.WelcomePage.Background"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.luyuan.android.mberp.ui.MainActivity"
            android:parentActivityName="com.luyuan.android.mberp.ui.LoginActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>
